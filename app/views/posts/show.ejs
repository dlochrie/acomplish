<ul class="breadcrumb">
	<li><a href="/">Home</a> <span class="divider">/</span></li>
	<li><a href="<%- pathTo.posts() %>">posts</a> <span class="divider">/</span></li>
	<li class="active"><a href="#">Details of post</a></li>
</ul>

<div class="page-header">
		<h1>Details of post</h1>
</div>

<table class="table table-bordered">
	<tbody>
		<tr><th>title</th><td><%= post.title %></td></tr>
		<tr><th>author</th><td><%- author.displayName %></td></tr>
		<tr><th>desc</th><td><%= post.desc %></td></tr>
		<tr><th>body</th><td><%= post.body %></td></tr>
		<tr><th>Comment Count</th><td><%= comments.length %></td></tr>
	</tbody>
</table>

<div class="comments">
	<h4>Comments</h4>
	<% comments.forEach(function(comment) { %>
		<p><strong><%- comment.displayName %></strong> says: <em><%- comment.body %></em></p>
	<% }) %>

	<% if (commentor) { %>
		<% var form = formFor(comment, { action: pathTo.post_comments(post), method: 'POST', id: "comment_form", class: "form-horizontal" }) %>
		<fieldset>
			<legend>Leave a Comment</legend>
			<%- form.begin() %>
				<% include ../comments/_form %>
				<div class="form-actions">
					<%- form.submit('<i class="icon-ok icon-white"></i> Post Comment', {class: 'btn btn-primary'}) %>
				</div>
			<%- form.end() %>
		</fieldset>
	<% } else { %>
		<p>You must be logged in to leave a comment. Click <%- link_to("here", "/login") %> to login.</p>
	<% } %>
</div>

<div class="well">
	<%- link_to('<i class="icon-edit icon-white"></i> Edit', pathTo.edit_post(post), {class: 'btn btn-primary'}) %>
	<%- link_to('<i class="icon-remove icon-white"></i> Delete', pathTo.post(post), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
	or
	<%- link_to('Back to index', pathTo.posts()) %>
</div>
