<div class="page-header">
  <h1>User Management</h1>
</div>

<div class="row">
  <div class="span12">
    <% if (registered.length > 0) { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% registered.forEach(function (user) { %>
            <tr>
              <td><strong><%- link_to(user.displayName, path_to.admin_user(user)) %></strong></td>
              <td><strong><%- link_to(user.email, path_to.admin_user(user)) %></strong></td>
              <td><%- user.roleName %></td>
              <td>
                <%- link_to('<i class="icon-edit"></i> Edit', path_to.edit_admin_user(user), {class: 'btn btn-mini'}) %>
                <%- link_to('<i class="icon-remove icon-white"></i> Delete', path_to.admin_user(user), {class: 'btn btn-mini btn-danger', method: 'delete', remote: true, jsonp: '(function (u) {location.href = u;})'}) %>        
              </td>
            </tr>
          <% }); %>        
        </tbody>
      </table>
    <% } else { %>
        <p class="alert alert-block alert-info">
            <strong>No users were found.</strong> 
        </p>
    <% } %>
  </div>
</div>