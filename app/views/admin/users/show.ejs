<div class="page-header">
    <h1><%- member.displayName %></h1>
</div>

<div class="row">
  <div class="span12">
    <table class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th>Role</th>
          <th>Email</th>
          <th>Member Since</th>
          <th>Last Modified</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%- role.name %></td>
          <td><%- member.email %></td>
          <td><%- member.created_at %></td>
          <td><%- member.updated_at %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<hr />

<div class="well">
  <%- link_to('<i class="icon-edit icon-white"></i> Edit', path_to.edit_admin_user(member), {class: 'btn btn-primary'}) %>
  <%- link_to('<i class="icon-remove icon-white"></i> Delete', path_to.admin_user(member), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
  <em>or</em>
  <%- link_to('Back to index', path_to.admin_users()) %>
</div>

