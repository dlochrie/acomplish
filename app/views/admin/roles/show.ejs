<ul class="breadcrumb">
  <li><a href="/">Home</a> <span class="divider">/</span></li>
  <li><a href="<%- pathTo.admin_roles() %>">roles</a> <span class="divider">/</span></li>
  <li class="active"><a href="#">Details of role</a></li>
</ul>

<div class="page-header">
  <h1>Details of role</h1>
</div>

<table class="table table-bordered">
  <tbody>
    <tr><th>name</th><td><%= role.name %></td></tr>
    <tr><th>desc</th><td><%= role.desc %></td></tr>
  </tbody>
</table>

<div class="well">
  <%- link_to('<i class="icon-edit icon-white"></i> Edit', pathTo.edit_admin_role(role), {class: 'btn btn-primary'}) %>
  <%- link_to('<i class="icon-remove icon-white"></i> Delete', pathTo.admin_role(role), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
  or
  <%- link_to('Back to index', pathTo.admin_roles()) %>
</div>
