<ul class="breadcrumb">
  <li><%- linkTo('Administration Panel <span class="divider">/</span>', pathTo.admin()) %></li>
  <li><%- linkTo('Roles Management <span class="divider">/</span>', pathTo.admin_roles(), { class: 'active' }) %></li>
</ul>
<div class="page-header">
  <h1>Roles Management</h1>
</div>
<div class="row">
  <div class="span12">
    <p>
      <strong>Note:</strong> You cannot create, edit, or delete Roles. See <code>acl.json</code>.
    </p>
  </div>
</div>
<div class="row">
  <div class="span12">
    <% if (roles.length > 0) { %>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Role Name</th>
          <th>Description</th>
          <th>Abilities</th>
        </tr>
      </thead>
      <tbody>
        <% roles.forEach(function(role) { %>
        <tr>
          <td><strong><%- role.name %></strong></td>
          <td><strong><%- role.desc %></strong></td>
          <td>
          <% role.abilities.forEach(function(a) { %>
            <dl class="dl-horizontal">
              <dt><%- a.controller %></dt>
              <% a.actions.forEach(function(actn) { %>
                <dd><%- (actn !== '*') ? actn : '[ All Actions ]' %></dd>
              <% }); %>
            </dl>
          <% }); %>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <% } else { %>
      <p class="alert alert-block alert-info"> <strong>No roles were found. Please update <code>acl.json</code>.</strong></p>
    <% } %>
  </div>
</div>