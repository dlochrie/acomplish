<ul class="breadcrumb">
  <li><%- linkTo('Administration Panel <span class="divider">/</span>', pathTo.admin()) %></li>
  <li><%- linkTo('Role Management <span class="divider">/</span>', pathTo.admin_roles()) %></li>
  <li><%- linkTo('Edit Existing Role', pathTo.edit_admin_role(role), { class: 'active' }) %></li>
</ul>

<div class="page-header">
  <h1>Edit Role | <%- role.name %></h1>
</div>

<% var form = formFor(role, {action: pathTo.admin_role(role), method: 'PUT', id: "role-form", class: 'form-horizontal'}) %>
<%- form.begin() %>
<%- include _form %>
<div class="form-actions">
  <%- form.submit('<i class="icon-ok icon-white"></i> Update role', {class: 'btn btn-primary'}) %> or
  <%- linkTo('Cancel', pathTo.admin_role(role), {class: 'btn'}) %>
</div>
<%- form.end() %>
