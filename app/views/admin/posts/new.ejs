<div class="page-header">
    <h1>New post</h1>
</div>

<% form_for(post, {action: path_to.admin_posts(), method: 'POST', id: "post_form", class: 'form-horizontal'}, function (form) { %>
    <% include _form %>
    <div class="form-actions">
        <%- form.submit('<i class="icon-ok icon-white"></i> Create post', {class: 'btn btn-primary'}) %> or
        <%- link_to('Cancel', path_to.posts(), {class: 'btn'}) %>
    </div>
<% });%>
