<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li><a href="<%- pathTo.comments() %>">comments</a> <span class="divider">/</span></li>
    <li class="active"><a href="#">Details of comment</a></li>
</ul>

<div class="page-header">
    <h1>Details of comment</h1>
</div>

<table class="table table-bordered">
    <tbody>
        <tr><th>userId</th><td><%= comment.userId %></td></tr>

        <tr><th>body</th><td><%= comment.body %></td></tr>

        <tr><th>flagged</th><td><%= comment.flagged %></td></tr>
    </tbody>
</table>

<div class="well">
    <%- link_to('<i class="icon-edit icon-white"></i> Edit', pathTo.edit_comment(comment), {class: 'btn btn-primary'}) %>
    <%- link_to('<i class="icon-remove icon-white"></i> Delete', pathTo.comment(comment), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
    or
    <%- link_to('Back to index', pathTo.comments()) %>
</div>
