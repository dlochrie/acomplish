<ul class="breadcrumb">
	<li>
		<a href="/">Home</a> <span class="divider">/</span>
	</li>
	<li class="active">
		<a href="<%- pathTo.memberships() %>">memberships</a> <span class="divider">/</span>
	</li>
</ul>
<div class="page-header">
	<h1>Role Management</h1>
</div>
<div class="row">
	<div class="span12">
		<p>
			<%- link_to( '<i class="icon-plus icon-white"></i> New membership', pathTo.new_membership(), {class: 'btn btn-primary'}) %>
		</p>
	</div>
</div>
<div class="row">
	<div class="span12">
		<% if (results.length > 0) { %>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>User</th>
						<th>Role</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					<% results.forEach(function (result) { %>
						<tr>
							<td><strong><%- link_to(result.user.displayName, pathTo.user(result.user)) %></strong></td>
							<td><strong><%- link_to(result.role.name, pathTo.membership(result.membership)) %></strong></td>
							<td>
								<%- link_to( '<i class="icon-edit"></i> Edit', pathTo.edit_membership(result.membership), {class: 'btn btn-mini'}) %>
								<%- link_to( '<i class="icon-remove icon-white"></i> Delete', pathTo.membership(result.membership), {class: 'btn btn-mini btn-danger', method: 'delete', remote: true, jsonp: '(function (u) {location.href = u;})'}) %>
							</td>
						</tr>
					<% }); %>
				</tbody>
			</table>
			<% } else { %>
				<p class="alert alert-block alert-info">	<strong>No memberships were found.</strong></p>
				<% } %>
	</div>
</div>